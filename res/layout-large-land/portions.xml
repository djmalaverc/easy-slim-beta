<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="bottom|center" >

            <Button
                android:id="@+id/button1"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@anim/custombuttonvegetables"
                android:lines="2"
                android:text="Vegetales y Hortalizas"
                android:textSize="@dimen/activity_horizontal_margin" />

            <Button
                android:id="@+id/button3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@anim/custombuttonfruit"
                android:text="Frutas" />

            <Button
                android:id="@+id/button5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@anim/custombuttondairy"
                android:text="Lacteos" />

            <Button
                android:id="@+id/button7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@anim/custombuttonsugars"
                android:text="Azucares dulces"
                android:textSize="@dimen/activity_horizontal_margin" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="bottom|center" >

            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@anim/custombuttoncereals"
                android:minHeight="50dip"
                android:minWidth="60dip"
                android:text="Cereales" />

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@anim/custombuttonmeateggle"
                android:maxLines="4"
                android:text="Carne Huevos..." />

            <Button
                android:id="@+id/button6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@anim/custombuttonroots"
                android:text="Raices Tuberculos Platanos"
                android:textSize="@dimen/activity_horizontal_margin" />

            <Button
                android:id="@+id/button8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@anim/custombuttonfat"
                android:text="Grasas" />
            
        </TableRow>
    
    </LinearLayout>

</ScrollView>
