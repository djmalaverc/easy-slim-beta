<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/button1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="@anim/custombuttonvegetables"
                android:text="Vegetales" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/button2"
                android:layout_width="265dp"
                android:layout_height="265dp"
                android:background="@anim/custombuttoncereals"
                android:minHeight="50dip"
                android:minWidth="60dip"
                android:text="Cereales" />

        </TableRow>

        <Button
            android:id="@+id/button3"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@anim/custombuttonfruit"
            android:text="Fruits" />

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/button4"
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:background="@anim/custombuttonmeateggle"
                android:maxLines="3"
                android:text="Carne Huevos Leguninosas"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
           	    android:id="@+id/button5"
           		android:layout_width="145dp"
        		android:layout_height="145dp"
           		android:layout_gravity="center"
         	    android:layout_margin="2dp"
           		android:background="@anim/custombuttondairy"
				android:text="Lacteos" />
            
           	<Button
           	    android:id="@+id/button6"
           		android:layout_width="145dp"
        		android:layout_height="145dp"
           		android:layout_gravity="center"
         	    android:layout_margin="2dp"
           		android:background="@anim/custombuttonroots"
				android:text="Raices Tuberculos Platanos" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

           		<Button
           		    android:id="@+id/button7"
           		    android:layout_width="100dp"
           		    android:layout_height="100dp"
           		    android:layout_gravity="center"
           		    android:layout_margin="20dp"
           		    android:background="@anim/custombuttonsugars"
           		    android:text="Azucares dulces" />

           		<Button
           		    android:id="@+id/button8"
           		    android:layout_width="100dp"
           		    android:layout_height="100dp"
           		    android:layout_gravity="center"
           		    android:layout_margin="20dp"
           		    android:background="@anim/custombuttonfat"
           		    android:text="Grasas" />

           	</TableRow>
    
    </LinearLayout>

</ScrollView>
